@model LoginViewModel

@{
    ViewData["Title"] = "Login Page";
    // Mendapatkan returnUrl
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="~/Theme/index2.html"><b>Aplikasi Barang Inventory PT. PogU Bersinar</b></a>
            <div class="text-center">
                <img class="rounded-circle" height="100" width="100" src="~/img/pepega.png" />
            </div>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Selamat Datang</p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="RememberMe" id="remember">
                                <label asp-for="RememberMe">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                @*  // Comment sementara buat external login provider
                        <div class="social-auth-links text-center mb-3">
                        <p>- OR -</p>
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Login Dengan Facebook
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i> Login Dengan Google+
                        </a>
                    </div>*@
                <!-- /.social-auth-links -->
                
                @*// Comment sementara buat lupa password feature
                    <p class="mb-1">
                    <a href="forgot-password.html">Lupa Password?</a>
                </p>*@
                <p class="mb-1">
                    <a asp-action="Daftar">Buat Akun</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
</body>