@inject AppDbContext barang
@inject UserManager<IdentityUser> userManager
@inject SignInManager<IdentityUser> signInManager
@{
    ViewData["Title"] = "Halaman Admin";
}

<body class="hold-transition sidebar-mini">
    <partial name="NavPartial" />
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="row mt-5">
                <div class="col-lg-3 col-6">
                    <!-- small card -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>@barang.BarangMasuk.Count()</h3>

                            <p>Stock Barang</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-archive"></i>
                        </div>
                        <a asp-action="StockBarang" class="small-box-footer">
                            More info <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small card -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@barang.BarangMasuk.Count()</h3>

                            <p>Barang Masuk</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-sign-in-alt"></i>
                        </div>
                        <a asp-action="ListBarangMasuk" class="small-box-footer">
                            More info <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-3 col-6">
                    <!-- small card -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@barang.BarangKeluar.Count()</h3>

                            <p>Barang Keluar</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <a asp-action="ListBarangKeluar" class="small-box-footer">
                            More info <i class="fas fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <div class="col-lg-3 col-6">
                        <!-- small card -->
                        <div class="small-box bg-warning">
                            <div class="inner">
                                <h3>@userManager.Users.Count()</h3>

                                <p>User</p>
                            </div>
                            <div class="icon">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <a asp-action="ListUser" class="small-box-footer">
                                More info <i class="fas fa-arrow-circle-right"></i>
                            </a>
                        </div>
                    </div>
                }
                <!-- ./col -->
            </div>
        </section>
        <!-- /.content -->
    </div>
</body>